<?xml version="1.0"?>
<datasources schemaLocation="https://docs.jboss.org/ironjacamr/schema/datasources_1_1.xsd">
    <datasource jndi-name="java:jboss/testDS" pool-name="PostgresSQLPool">
        <connection-url>jdbc:postgresql://localhost:5432/test</connection-url>
        <driver>postgresql-42.6.0.jar</driver>
        <driver-class>org.postgresql.Driver</driver-class>
        <pool>
            <max-pool-size>30</max-pool-size>
        </pool>
        <security>
            <user-name>test</user-name>
            <password>qwerty12345</password>
        </security>
        <validation>
            <check-valid-connection-sql>select 1</check-valid-connection-sql>
        </validation>
    </datasource>
</datasources>

